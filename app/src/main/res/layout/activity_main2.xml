<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    tools:context="com.irregularverb.example.carthy.irregularverb.Main2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/score"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Score"
            android:textColor="@color/WhiteCraie"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="95dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:gravity="center"
        android:layout_weight="1.48">

        <TextView
            android:id="@+id/present"
            android:textColor="@color/WhiteCraie"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/passe"
            android:textColor="@color/WhiteCraie"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/present"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/preterit"
            android:textColor="@color/WhiteCraie"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/passe"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/traduction"
            android:textColor="@color/WhiteCraie"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/passe"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="150dp" />

    </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:paddingTop="30dp"
            android:layout_below="@+id/present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/ans1"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/WhiteCraie"
            android:textAllCaps="false"
            android:layout_width="85dp"
            android:layout_height="55dp"
            android:onClick="ans1"
            android:background="@drawable/white_button"/>

        <Button
            android:id="@+id/ans2"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/WhiteCraie"
            android:textAllCaps="false"
            android:layout_width="85dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:onClick="ans2"
            android:background="@drawable/white_button"/>

        <Button
            android:id="@+id/ans3"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/WhiteCraie"
            android:textAllCaps="false"
            android:layout_width="85dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:onClick="ans3"
            android:background="@drawable/white_button"/>

    </LinearLayout>

        <Button
        android:id="@+id/exit"
        android:layout_marginTop="35dp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:onClick="exit"
        android:text="@string/Exit"
        android:background="@drawable/red_button"/>

    </LinearLayout>




</RelativeLayout>
